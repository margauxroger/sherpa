  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-sherpa">
    <a class="navbar-brand avatar" href="<%= user_signed_in? && current_user.teacher? ? '/teachers' : '/students' %>">
      <%= cl_image_tag("Vector_Sherpa_uznxgg", width: 30, height: 45) %>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>

          <% if current_user.role == "teacher" %>

          <li class="nav-item <%= 'active' if current_page?(teachers_root_path) %>">
            <%= link_to "Dashboard", teachers_root_path, class: "nav-link mr-3" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(materials_path) %>">
            <%= link_to "Courses", materials_path, class: "nav-link mr-3" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(teachers_flashcards_path) %>  ">
            <%= link_to "Flashcards", teachers_flashcards_path, class: "nav-link mr-4" %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <a class="mr-4"><%= current_user.email %></a>
          </li>
          <li class="nav-item dropdown ml-3">

            <div class="avatar-with-notification dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             <img class="notification-avatar avatar dropdown-toggle"  src="<%= current_user.picture_url %>" />
             <% if current_user.count_unread_notifications > 0 %>
               <p class="notification-count"><%= current_user.count_unread_notifications %></p>
             <% end %>
            </div>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">My Profile</a>
              <a class="dropdown-item" href="#">Notifications</a>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

          <% else %>

          <li class="nav-item text-right">
            <%= current_user.email %>
          </li>
          <li class="nav-item">
            <%= link_to "All my courses", students_courses_path, class: "nav-link mr-3" %>
          </li>
          <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link mr-3" %>
          </li>


          <% end %>

        <% else %>
          <li class="nav-item mr-3">
            <a class="nav-link" id="color2" href="/users/sign_in">Sign in</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
