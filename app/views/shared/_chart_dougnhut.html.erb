<div class="row chart-teacher-show-display">
  <% @courses.each_with_index do |course, index| %>
     <div class="col-sm-12 col-md-4 col-lg-3">
       <%= link_to teachers_course_path(course.id) do %>
       <div data-division= "<%= course.division.name %>" data-score = "<%= @success_rate[index] %>" class="chart-teacher-show">
         <canvas class="myCharts"></canvas>
       </div>
     </div>
    <% end %>
  <% end %>
</div>
